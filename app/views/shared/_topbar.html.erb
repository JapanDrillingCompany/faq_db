	    <li><%= link_to publicity_qa_categories_path do %>
		  <%= content_tag(:i, "", :class => "icon-screenshot") %> 分類
		  <% end %></li>
	    <li><%= link_to publicity_helps_path do %>
		  <%= content_tag(:i, "", :class => "icon-screenshot") %>短冊
