<header class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
    <%=link_to 'Home', root_path, :class => 'navbar-brand' %>
    </div>
    <div class="col-sm-3 col-md-3 navbar-right">
      <%= form_tag publicity_qas_path, :method => 'get', :class => "navbar-form", :role => "search" do %>
        <div class="input-group">
          <%= text_field_tag :keyword, params[:keyword], :class => "form-control", :id => "srch-term", :placeholder =>"Search" %>
          <div class="input-group-btn">
			<%= button_tag(:type => 'submit', :class => "btn btn-default") do %>
			 <span class="glyphicon glyphicon-search"></span>
			<% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="collapse navbar-collapse">
	<!-- Navigation Menu
	================================================== -->
    <ul class="nav navbar-nav">
	    <li><%= link_to publicity_qas_path do %>
		  <%= content_tag(:i, "", :class => "icon-screenshot") %> <%= t("activerecord.models.publicity/qa", :default => "FAQ") %>
		  <% end %></li>
	    <li><%= link_to publicity_qa_categories_path do %>
		  <%= content_tag(:i, "", :class => "icon-screenshot") %> <%= t("activerecord.models.publicity/qa_category", :default => "Category") %>
		  <% end %></li>
    </ul>
    <!-- /nave -->
    </div>
    </div>
  </div>
</header>