<h2>事務局用</h2>
<%= form_tag publicity_qas_path, :method => 'get', :remote => true, :class => "navbar-form", :role => "search" do %>
  <div class="input-group">
    <%= text_field_tag :keyword, params[:keyword], :class => "form-control", :id => "srch-term", :placeholder =>"想定問答から探す" %>
    <div class="input-group-btn">
		<%= button_tag(:type => 'submit', :class => "btn btn-default") do %>
		 <span class="glyphicon glyphicon-search"></span>
		<% end %>
    </div>
  </div>
<% end %>
<%= link_to '全部リセット', publicity_qas_path %>
	  <div class="pagination">
		<%= paginate collection %>
	  </div>
<div class="panel-group" id="accordion">
      <% for qa in collection %>
	  <div class="panel panel-default">
	    <div class="panel-heading">
	      <h4 class="panel-title">
	        <a data-toggle="collapse" data-parent="#accordion" href="#qa_<%= qa.id %>">
	          <%= qa.id %> <%= rm_html_tag(qa.question) %>
	        </a>
	      </h4>
	    </div>
	    <div id="qa_<%= qa.id %>" class="panel-collapse collapse in">
	      <div class="panel-body">
	        <%= rm_html_tag(qa.answer) %><%= link_to "議長に表示→", qa, {:remote => true, :class => "btn btn-primary btn-sm"} %>
	      </div>
	    </div>
	  </div>
	 <% end %>
     </tbody>
    </table>


</div>
	<div class="pagination">
	  <%= paginate collection %>
	</div>

